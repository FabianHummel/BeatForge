<UserControl 
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="clr-namespace:BeatForgeClient.ViewModels"
	xmlns:utility="clr-namespace:BeatForgeClient.Utility"
	xmlns:models="clr-namespace:BeatForgeClient.Models"
	x:Class="BeatForgeClient.Views.Content"
	Background="White">
	
	<Design.DataContext>
		<vm:ContentViewModel/>
	</Design.DataContext>
	
	<UserControl.Styles>
		<Style Selector="Panel">
			<Setter Property="Width" Value="20.0"/>
			<Setter Property="Height" Value="10.0"/>
		</Style>
	</UserControl.Styles>
	
	<ScrollViewer HorizontalScrollBarVisibility="Auto"
	              VerticalScrollBarVisibility="Auto">
		<ItemsRepeater Items="{Binding ChannelNotes}"
		               PointerPressed="Grid_OnPointerPressed"
		               Name="Grid"
		               Background="White">
			<ItemsRepeater.ItemTemplate>
				<DataTemplate DataType="{x:Type models:Note}">
					<Panel Background="Aqua"/>
				</DataTemplate>
			</ItemsRepeater.ItemTemplate>
			<ItemsRepeater.Layout>
				<utility:NoteLayout
					BeatCount="{Binding MainVm.SettingsViewModel.SongLength}"
					OctaveCount="4"
					NoteWidth="20.0"
					NoteHeight="10.0"/>
			</ItemsRepeater.Layout>
		</ItemsRepeater>
	</ScrollViewer>
</UserControl>
